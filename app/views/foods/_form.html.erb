<div class="row">
 <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
   <%= form_for(food) do |f| %>

    <% if food.errors.any? %>
     <div class="alert alert-warning">
      <ul>
       <% food.errors.full_messages.each do |food| %>
       <li><%= food %></li>
       <% end %>
      </ul>
     </div>
    <% end %>
    
      <div class="form-group">
      <%= f.label :ate_at, "日時" %>
      <%= f.text_field :ate_at, class: "form-control" %>
      </div>
 
     <div class="form-group">
      <%= f.label :content, "メニュー" %>
      <%= f.text_field :content, class: "form-control" %>
     </div>
     
      <div class="form-group">
      <%= f.label :fat, "カロリー" %>
      <%= f.text_field :fat, class: "form-control" %>
     </div>
  

  <%= f.submit "投稿", class: "btn btn-primary btn-block" %>

   <% end %>
 </div>
</div>