<ul class="media-list">
  <% foods.each do |foods| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(job.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to food.user.name, user_path(job.user) %> <span class="text-muted">posted at <%= food.created_at %></span>
        </div>
        <div>
          <p><%= food.content %></p>
        </div>
        <div>
          <% if current_user == food.user %>
            <%= link_to "Delete", food, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
            <%= link_to 'edit', edit_food_path(food), class: "btn btn-default" %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate foods %>
</ul>