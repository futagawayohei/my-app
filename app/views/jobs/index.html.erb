<h1>一覧</h1>

<% if @jobs.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>日時</th>
        <th>内容</th>
        <th>ポイント</th>
      </tr>
    </thead>
    <tbody>

     <% @jobs.each do |job| %>
      <thead>
       <tr>
        <td><%= link_to job.id, job %></td>
        <td><%= job.burn_at %></td>
        <td><%= job.content %></td>
        <td><%= job.calorie %></td>
       </tr>
    　</thead>
    
   　<% end %>
  　</tbody>
  </table>
<% end %>
 
